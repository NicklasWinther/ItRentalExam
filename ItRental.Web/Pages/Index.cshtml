@page
@model ItRental.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Velkommen";
    Layout = "_Layout";
}
    @using ItRental.Dal.Services;

<h2>AspIT Nordjyllands IT-udlånsside</h2>
<p>Velkommen til AspIT Nordjyllands side for udlån og aflevering af IT-udstyr. Her er det muligt at håndtere lånere, IT-udstyr samt registrering af udlån/aflevering af IT-udstyr.</p>

<h2>Åbningstider</h2>
<table>
    <tr>
        <th>Dag</th>
        <th>Åbningstid</th>
        <th>Lukketid</th>
    </tr>
    <tbody>
        @{
            foreach (OpeningHours openingHours in Model.OpeningHoursInfo.OpeningHours)
            {
                <tr>
                    <td>@openingHours.Day</td>
                    <td>@openingHours.OpeningHour</td>
                    <td>@openingHours.ClosingHour</td>
                </tr>
            }
                <tr>
                    <td>Lige nu</td>
                    <td>@Model.IsOpen</td>
                </tr>
        }
    </tbody>
</table>